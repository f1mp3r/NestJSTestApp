{
  "name": "Hype",
  "version": "0.1.0",
  "description": "NestJS API project template crafted for Docker environments",
  "author": "Saluki",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf ./dist",
    "start": "node dist/server.js",
    "start:env": "npm run build && env-cmd .env npm run start",
    "dev": "env-cmd .env nodemon",
    "build": "npm run clean && tsc",
    "build:docker": "NODE_ENV=development npm install && npm run build",
    "seeds:run": "env-cmd .env node ./seeds/index.js",
    "test": "env-cmd .env jest --config=jest.json --notify",
    "test:collectCoverage": "env-cmd .env jest --config=jest.json --collectCoverage",
    "lint": "tslint -p tsconfig.json -c tslint.json 'src/**/*.ts'",
    "start:debug": "env-cmd .env nodemon --config nodemon-debug.json",
    "migration:generate": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
    "migration:create": "env-cmd .env rm -typeorm migration:create -n",
    "migration:run": "env-cmd .env ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "env-cmd .env ts-node ./node_modules/typeorm/cli.js migration:revert",
    "typeorm:entity:create": "env-cmd .env ts-node ./node_modules/typeorm/cli.js entity:create -n$NAME.entity.ts"
  },
  "dependencies": {
    "@nestjs/common": "^5.5.0",
    "@nestjs/core": "^5.5.0",
    "@nestjs/jwt": "^0.2.0",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/testing": "^5.5.0",
    "@nestjs/typeorm": "^5.2.2",
    "body-parser": "^1.18.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "helmet": "^3.15.0",
    "i18n": "^0.8.3",
    "joi": "^13.7.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "tsconfig-paths": "^3.7.0",
    "typeorm": "^0.2.9",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.40",
    "@types/jest": "^23.3.10",
    "@types/joi": "^13.6.3",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.12",
    "@types/supertest": "^2.0.7",
    "@types/winston": "^2.4.4",
    "env-cmd": "^8.0.2",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "rimraf": "^2.6.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  }
}
